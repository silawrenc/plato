{
    "name": "silawrenc/plato",
    "description": "A simple form library",
    "keywords": ["validation"],
    "version": "0.0.1",

    "type": "library",
    "license": "MIT",

    "homepage": "http://github.com/silawrenc/plato",

    "authors": [
        {
            "name": "Simon Lawrence"
        }
    ],

    "autoload": {
        "psr-4": {
            "plato\\": "./test/lib"
        },
        "files": [
            "./src/validators/array.php",
            "./src/validators/boolean.php",
            "./src/validators/construct.php",
            "./src/validators/date.php",
            "./src/validators/generic.php",
            "./src/validators/math.php",
            "./src/validators/multiple.php",
            "./src/validators/string.php",
            "./src/rule.php",
            "./src/message.php",
            "./src/evaluate.php",
            "./src/validate.php",
            "./src/assert.php",
            "./src/PlatoException.php"
        ]
    },

    "require": {
        "php": ">=5.3"
    },

    "require-dev": {
        "phpunit/phpunit": "~4.0"
    }
}
